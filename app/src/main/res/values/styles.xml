<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="textfont">

        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#919496</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="highttextfont" parent="textfont">
        <item name="android:textColor">#1BD6B3</item>

    </style>
    <style name="downtextfont" parent="textfont">
        <item name="android:textColor">#D94852</item>
    </style>
    <style name="normaltextfont" parent="textfont">
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>
